<div class="content">
    <!-- Form -->
    <div class="content">
        <div class="cms-breadcrumbs text-uppercase pb-3">
            <a href="cms-donate">Donate</a> / New Donation Option
        </div>
        <div id="form-container" class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card cms-blog">
                        <div class="card-header">
                            <h5>New Donation Option:</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="donate_type">Mode</label>
                                <select class="form-control" name="donate_type" id="donate_type">
                                    <option value="GCash">GCash</option>
                                    <option value="PayMaya">PayMaya</option>
                                    <option value="BPI">BPI
                                    </option>
                                    <option value="BDO">BDO</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="donate_name">Account Name</label>
                                <input type="text" class="form-control" name="donate_name" id="donate_name"
                                    placeholder="Account Name">
                            </div>
                            <div class="form-group">
                                <label for="donate_number">Account Number</label>
                                <input type="number" class="form-control" name="donate_number" id="donate_number"
                                    placeholder="Account Number">
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-outline-success">SUBMIT</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>