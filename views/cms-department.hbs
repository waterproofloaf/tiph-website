<div class="content">
  <div class="row">
    <div class="col-md-12">
      <form>
        <div class="card">
          <div class="card-header">
            <div class="row d-flex align-items-center">
              <div class="col">
                <h4 class="card-title">
                  Manage Departments
                </h4>
              </div>
              <div class="col text-right">
                <a href="cms-department-new">
                  <button id="blogeditbtn" type="button" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Add a new department
                  </button>
                </a>
              </div>
            </div>
          </div>
          <div class="card-body">
            <div class="table-responsive text-center">
              <table class="table text-left blog-project-table" id="dept-table">
                <thead class=" text-primary">
                  <th style="width:40%">
                    Name
                  </th>
                  <th style="width:20%">
                    Contact
                  </th>
                  <th style="width:20%">
                    Category
                  </th>
                  <th class="text-center" style="width:10%">
                    Edit
                  </th>
                  <th class="text-center" style="width:10%">
                    Delete
                  </th>
                </thead>
                <tbody>
                  {{#each department_info}}
                  <tr>
                    <td>
                      {{this.department_title}}
                    </td>
                    <td>
                      <span class="entry-progress">
                        {{this.department_contact}}
                      </span>
                    </td>
                    <td>
                      <span class="entry-progress">
                        {{this.department_category}}
                      </span>
                    </td>
                    <td class="text-right">
                      <a href="/cms-department-edit?id={{this._id}}"><button id="blogeditbtn" type="button"
                          class="btn btn-outline-success">Edit</button></a>
                    </td>
                    <td class="text-right">
                      <button id="{{this._id}}" type="button" class="btn btn-outline-danger"
                        onclick="deleteConfirm(this)">Delete</button>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function deleteConfirm(button) {
    var self = $(button).attr('id');
    if (confirm("Are you sure of deleting this department?")) {
      $.ajax({
        url: "/cms-department/delete",
        data: { id: self },
        success: function (response) {
          window.location.href = 'cms-department';
        },
        error: function (xhr) { }
      });
    }
  }
</script>